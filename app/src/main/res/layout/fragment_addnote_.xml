<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8266B5"
    tools:context=".addnote_Fragment">



   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/deatbt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="00/00/0000"
       android:layout_marginTop="20sp"
      android:background="@drawable/addbt"
      android:padding="10dp"
      android:layout_margin="10dp"
      android:textColor="#000"
      android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/tiamtbt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="00/00"
       android:background="@drawable/addbt"
       android:padding="10dp"
       android:layout_margin="10dp"
       android:textColor="#000"
       android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

   <EditText
       android:id="@+id/texttll"
       android:layout_width="match_parent"
       android:layout_height="600dp"
       android:layout_margin="10dp"
       android:background="@drawable/textall"
       android:layout_marginStart="12dp"
       android:hint="What to do ?"
       android:textAlignment="center"
       android:inputType="text"
       android:padding="10dp"
       android:textColor="#000"
       android:textSize="20sp" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/submitboton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:background="@drawable/addbt"
      android:backgroundTint="#000"
      android:text="Submit"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textAllCaps="false"
      android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
      android:layout_marginTop="50dp"/>




</LinearLayout>